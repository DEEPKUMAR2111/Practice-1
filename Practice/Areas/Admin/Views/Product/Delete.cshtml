@model Data.Models.ProductModel
<form method="post" class="w-50" style="margin-left:auto;margin-right:auto;">
     <input asp-for="ProductId" hidden />
       <div class="border p-3 mt-4">
        <div class="row pb-2">
        <h3 class="text-danger">Delete Product</h3>
        <hr />
        </div>
        
        <div class="mb-3 row">
  
            <div>
                <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control " disabled />
            <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 row ">
        <div>
                <label asp-for="Discription" class="p-0"></label>
            <input asp-for="Discription" class="form-control" disabled />
                <span asp-validation-for="Discription" class="text-danger"></span>
        </div>
        </div>
        <div class="row ">
            <div class="col-6 ">
                <button type="submit" class="btn btn-danger w-100">Delete</button>
            </div>
            <div class="col-6">
                <a asp-controller="Product" asp-action="Index" class= "btn btn-secondary w-100 ">Back To Categories</a>
            </div>
        </div>
        </div>
   
</form>

                
  @section Scripts{
      @{
         <partial name="_ValidationScriptsPartial"/>
       }
   }