@model Data.Models.CategoryModel
<form method="post" class="w-50" style="margin-left:auto;margin-right:auto;">
     <input asp-for="CategoryId" hidden />
      <input asp-for="CreatedDate" hidden />
       <div class="border p-3 mt-4">
        <div class="row pb-2">
        <h3 class="text-danger">Edit Category</h3>
        <hr />
        </div>
        
        <div class="mb-3 row">
  
            <div>
                <label asp-for="CategoryName" class="p-0"></label>
            <input asp-for="CategoryName" class="form-control " />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 row ">
        <div>
                <label asp-for="Discription" class="p-0"></label>
            <input asp-for="Discription" class="form-control" />
                <span asp-validation-for="Discription" class="text-danger"></span>
        </div>
        </div>
        <div class="row ">
            <div class="col-6 ">
                <button type="submit" class="btn btn-success w-100">Update Category</button>
            </div>
            <div class="col-6">
                <a asp-controller="Category" asp-action="Index" class= "btn btn-secondary w-100 ">Back To Categories</a>
            </div>
        </div>
        </div>
   
</form>

   @section Scripts{
      @{
         <partial name="_ValidationScriptsPartial"/>
       }
   }